# Archivo de configuración para Railway.app

# ==============================================
# VARIABLES DE ENTORNO PARA RAILWAY
# ==============================================

# IMPORTANTE: Estas variables se configuran en el dashboard de Railway,
# NO en un archivo .env que se suba al repositorio

# Configuraciones obligatorias de Django
DEBUG=False
SECRET_KEY=tu-secret-key-super-segura-de-50-caracteres-railway

# Dominio de Railway (se asigna automáticamente)
ALLOWED_HOSTS=*.railway.app,*.up.railway.app

# Base de datos (Railway PostgreSQL)
# Railway provee estas variables automáticamente cuando conectas PostgreSQL:
# DATABASE_URL=postgresql://usuario:contraseña@host:puerto/database

# Configuraciones de archivos estáticos
USE_WHITENOISE=True
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Email (configurar con servicio real)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-gmail
DEFAULT_FROM_EMAIL=noreply@galletaskati.com

# Puerto para Railway (importante)
PORT=8000

# Configuraciones de seguridad para producción
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Configuraciones específicas de Railway
RAILWAY_ENVIRONMENT=production
PYTHONPATH=/app

# Rate limiting y seguridad
RATE_LIMIT_LOGIN=5/m
RATE_LIMIT_PASSWORD_RESET=3/h
AXES_FAILURE_LIMIT=5
