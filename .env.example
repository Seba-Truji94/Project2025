# Environment variables para producción
# Copiar este archivo como .env y configurar valores reales

# Configuraciones de seguridad
SECRET_KEY=your-very-long-and-random-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Base de datos
DATABASE_URL=postgresql://user:password@localhost/dbname

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Configuraciones de cache/Redis (opcional)
REDIS_URL=redis://localhost:6379/0

# Configuraciones de archivos estáticos/media
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# IPs permitidas para admin en producción
ADMIN_IP_WHITELIST=1.2.3.4,5.6.7.8

# Configuraciones específicas de seguridad
RATE_LIMIT_LOGIN=5/m
RATE_LIMIT_PASSWORD_RESET=3/h
AXES_FAILURE_LIMIT=5
AXES_COOLOFF_TIME=1
